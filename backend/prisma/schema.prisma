generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  passwordHash String
  role         UserRole @default(OPERATOR)
  active       Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  logs         Log[]

  @@map("users")
}

model Log {
  id             String   @id @default(uuid())
  userId         String
  action         String
  conversationId String?
  timestamp      DateTime @default(now())
  metadata       Json?
  user           User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([conversationId])
  @@index([timestamp])
  @@map("logs")
}

model Setting {
  id        String   @id @default(uuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("settings")
}

model WhatsAppNumber {
  id          String    @id @default(uuid())
  instanceId  String    @unique
  token       String
  phoneNumber String?
  name        String?
  isConnected Boolean   @default(false)
  lastSeen    DateTime?
  qrCode      String?
  inboxId     Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  botFlows    BotFlow[]

  @@map("whatsapp_numbers")
}

model BotFlow {
  id               String         @id @default(uuid())
  name             String
  whatsappNumberId String
  isActive         Boolean        @default(true)
  initialMessage   String
  menuSteps        Json
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  whatsappNumber   WhatsAppNumber @relation(fields: [whatsappNumberId], references: [id], onDelete: Cascade)
  sessions         BotSession[]

  @@map("bot_flows")
}

model BotSession {
  id             String   @id @default(uuid())
  phoneNumber    String
  botFlowId      String
  currentStep    String?
  context        Json?
  isActive       Boolean  @default(true)
  conversationId Int?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  botFlow        BotFlow  @relation(fields: [botFlowId], references: [id], onDelete: Cascade)

  @@unique([phoneNumber, botFlowId, isActive])
  @@index([phoneNumber])
  @@index([botFlowId])
  @@map("bot_sessions")
}

enum UserRole {
  ADMIN
  SUPERVISOR
  OPERATOR
}
