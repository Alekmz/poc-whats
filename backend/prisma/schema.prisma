// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Seed configuration
// Run with: npm run prisma:seed

enum UserRole {
  ADMIN
  SUPERVISOR
  OPERATOR
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  passwordHash String
  role         UserRole @default(OPERATOR)
  active       Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  logs Log[]

  @@map("users")
}

model Log {
  id             String   @id @default(uuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id])
  action         String
  conversationId String?
  timestamp      DateTime @default(now())
  metadata       Json?

  @@index([userId])
  @@index([conversationId])
  @@index([timestamp])
  @@map("logs")
}

model Setting {
  id        String   @id @default(uuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("settings")
}

model WhatsAppNumber {
  id          String   @id @default(uuid())
  instanceId  String   @unique
  token       String
  phoneNumber String?
  name        String?
  isConnected Boolean  @default(false)
  lastSeen    DateTime?
  qrCode      String?
  inboxId     Int?     // ID do inbox do Chatwoot associado
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  botFlows BotFlow[]

  @@map("whatsapp_numbers")
}

model BotFlow {
  id              String   @id @default(uuid())
  name            String   // Nome do fluxo (ex: "URA Principal")
  whatsappNumberId String
  whatsappNumber  WhatsAppNumber @relation(fields: [whatsappNumberId], references: [id], onDelete: Cascade)
  isActive        Boolean  @default(true)
  initialMessage  String   // Mensagem inicial do bot
  menuSteps       Json     // Estrutura de menus (ex: [{key: "1", text: "Atendimento", nextStep: "..."}])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  sessions BotSession[]

  @@map("bot_flows")
}

model BotSession {
  id             String   @id @default(uuid())
  phoneNumber    String   // Telefone do usu√°rio
  botFlowId      String
  botFlow        BotFlow  @relation(fields: [botFlowId], references: [id], onDelete: Cascade)
  currentStep    String?  // Step atual no fluxo
  context        Json?    // Dados coletados durante o fluxo
  isActive       Boolean  @default(true)
  conversationId Int?     // ID da conversa no Chatwoot (quando transferir para humano)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([phoneNumber, botFlowId, isActive])
  @@index([phoneNumber])
  @@index([botFlowId])
  @@map("bot_sessions")
}

